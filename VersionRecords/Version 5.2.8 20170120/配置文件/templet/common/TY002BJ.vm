	margin-left:5px;
}
.fl{
	float:left;
}
label.lg{
	width:185px;
}
.banner{
	margin:8px 0;
}
.title-terms{
	font-size: 1.5em;
    margin: 2em 0 .8em;
}
.remarks{
	margin:10px 0;
}
.remarks strong{
	font-size:1.2em;
}
table{
	border-collapse:collapse;
	width:100%;
	margin-top:10px;
	margin-bottom:4px;
}
